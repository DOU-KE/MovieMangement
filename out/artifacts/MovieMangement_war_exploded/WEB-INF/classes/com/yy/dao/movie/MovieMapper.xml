<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yy.dao.movie.MovieMapper">

    <insert id="addMovie" parameterType="Movie">
        insert into movice.movie (id, name, type, synopsis, img, video)
        VALUES (#{id}, #{name},#{type},#{synopsis},#{img},#{video})
    </insert>

    <select id="getMovieList" resultType="Movie">
        select * from movice.movie
    </select>


    <select id="getMovieByNameOrType" resultType="Movie" parameterType="String">
        select * from movice.movie where 1=1
        <if test="name != ''">
            and name = #{name}
        </if>
        <if test="type != ''">
            and type = #{type}
        </if>

    </select>

    <select id="getMovieById" resultType="Movie">
        select * from movice.movie where id = #{id}
    </select>

    <delete id="deleteMovieById" parameterType="integer">
        delete from movice.movie where id = #{id}
    </delete>

    <update id="updateMovie" parameterType="Movie">
        update movice.movie
        <trim prefix="set" suffixOverrides="," suffix="where id = #{id}">
            <if test="name != ''">name = #{name},</if>
            <if test="type != ''">type = #{type},</if>
            <if test="synopsis != ''">synopsis = #{synopsis},</if>
        </trim>
    </update>

</mapper>
    
    